<div layout-gt-sm="row">
    <md-input-container class="md-block" flex-gt-xs>
        <label>包裹追踪号 (Tracking #)</label>
        <input ng-model="package.Tracking">
    </md-input-container>
    <md-input-container class="md-block" flex-gt-xs>
        <label>订单号 (Order #, 可不填)</label>
        <input ng-model="package.OrderNumber">
    </md-input-container>
    <md-input-container class="md-block" flex-gt-xs>
        <label>备注 (可以添加其他要求)</label>
        <input ng-model="package.Notes">
    </md-input-container>
    <md-input-container class="md-block" flex-gt-xs data-ng-show="newPackageStatusList.indexOf(package.Status)>-1">
        <label>包裹状态</label>
        <md-select ng-model="package.Status">
            <md-option ng-repeat="status in newPackageStatusList track by $index" data-ng-value="status">
                {{status}}
            </md-option>
        </md-select>
    </md-input-container>
    <md-input-container class="md-block" flex-gt-xs data-ng-show="newPackageStatusList.indexOf(package.Status)===-1">
        <label>包裹状态</label>
        <input disabled ng-model="package.Status">
    </md-input-container>
</div>
<div layout-gt-sm="row" class="text-primary">
    <md-input-container md-no-float class="md-block hide-md-error-msg">
        <label>请选择收货地址</label>
        <md-select ng-model="package.Address" ng-model-options="{trackBy: '$value.ID'}">
            <md-option ng-repeat="address in addresses track by $index" data-ng-value="address" md-on-close="updateAddressString()">
                {{address.addressString}}
            </md-option>
        </md-select>
    </md-input-container>
    <md-button class="md-raised md-warn" ng-click="showAddressManager()">编辑当前地址</md-button>
    <md-button class="md-raised md-warn" ng-click="showAddressManager({})">创建新地址</md-button>
    <md-button class="md-raised md-warn" ng-click="deleteAddress(package.Address.ID)">删除当前地址</md-button>
</div>
<br />
<div layout="row">
    <md-table-container>
        <table class="table table table-striped" md-table md-row-select="options.rowSelection" multiple="{{options.multiSelect}}" ng-model="selected" md-progress="promise">
            <thead ng-if="!options.decapitate" md-head md-order="query.order" md-on-reorder="logOrder">
                <tr md-row>
                    <th md-column md-numeric md-order-by="Number" class="text-center"><span>#</span></th>
                    <th md-column md-order-by="Brand" class="text-center"><span>品牌</span></th>
                    <th md-column md-order-by="Name" class="text-center"><span>名称</span></th>
                    <th md-column md-order-by="Category" class="text-center"><span>种类</span></th>
                    <th md-column md-order-by="Price" class="text-center"><span>单价(美金)</span></th>
                    <th md-column md-order-by="Quantity" class="text-center"><span>数量</span></th>
                    <th md-column md-order-by="" class="text-center"><span></span></th>
                </tr>
            </thead>

            <tbody md-body>
                <tr md-row md-select="product" md-select-id="Number" md-auto-select="false" ng-repeat="product in package.Products track by $index">
                    <td md-cell>{{product.Number}}</td>
                    <td md-cell>
                        <md-input-container md-no-float class="md-block hide-md-error-msg" layout-fill>
                            <input ng-model="product.Brand" aria-label="brand">
                        </md-input-container>
                    </td>
                    <td md-cell>
                        <md-input-container md-no-float class="md-block hide-md-error-msg" layout-fill>
                            <input ng-model="product.Name" aria-label="name">
                        </md-input-container>
                    </td>
                    <td md-cell>
                        <md-input-container md-no-float class="md-block hide-md-error-msg" layout-fill>
                            @*<input ng-model="product.Category" aria-label="category">*@
                            <md-select ng-model="product.Category" aria-label="category">
                                <md-optgroup ng-repeat="category in categories" label="{{category.Port}}">
                                    <md-option ng-value="c.ID" ng-repeat="c in category.Categories">{{c.Category}}</md-option>
                                </md-optgroup>
                            </md-select>
                        </md-input-container>
                    </td>
                    <td md-cell>
                        <md-input-container md-no-float class="md-block hide-md-error-msg" layout-fill>
                            <input type="number" ng-model="product.Price" aria-label="price">
                        </md-input-container>
                    </td>
                    <td md-cell>
                        <md-input-container md-no-float class="md-block hide-md-error-msg" layout-fill>
                            <input type="number" ng-model="product.Quantity" aria-label="quantity">
                        </md-input-container>
                    </td>
                    <td md-cell><md-button class="md-warn md-mini" data-ng-show="$index>0" ng-click="removeProduct($index)" layout-fill>删除</md-button></td>
                </tr>
            </tbody>
        </table>
        <md-button class="md-raised md-warn pull-left" ng-click="addProduct()">添加</md-button>
    </md-table-container>

    
</div>
<button type="button" class="btn btn-primary pull-right" data-ng-click="updatePackage()">保存包裹</button>
<br />