<div class="modal fade" id="senderModal" tabindex="-1" role="dialog" aria-labelledby="senderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">管理发货人</h4>
            </div>
            <div class="modal-body">
                <h4>{{ package.Sender.ID===undefined?'添加新':'编辑' }}发货人</h4>
                <md-input-container class="md-block" flex-gt-xs>
                    <label>发货人姓名</label>
                    <input ng-model="package.Sender.Name">
                </md-input-container>
                <md-input-container class="md-block" flex-gt-xs>
                    <label>地址(选填)</label>
                    <input ng-model="package.Sender.Address">
                </md-input-container>
                <md-input-container class="md-block" flex-gt-xs>
                    <label>联系电话</label>
                    <input ng-model="package.Sender.Phone">
                </md-input-container>
                <div layout-gt-sm="row">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="updateSender()">保存</button>
            </div>
        </div>
    </div>
</div>