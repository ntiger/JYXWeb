@{
    var angularEnabled = (ViewBag.AngularAppName != null);
    var angularAppName = ViewBag.AngularAppName;
    var angularControllerName = ViewBag.AngularControllerName;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://use.fontawesome.com/4c12c80f70.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body id="main-document-body" @if (angularEnabled) { <text> data-ng-app="@angularAppName" data-ng-controller="@angularControllerName as vm" ng-cloak </text> }>
    <div layout="column" flex>
        @Html.Partial("_Menu")
        <div class="container no-padding" style="margin-top:50px">
            @RenderBody()
        </div>
        <div layout="row" flex="noshrink" layout-align="center center">
            <div flex class="text-center" style="border-top:1px solid #ddd;padding:16px 32px">
                &copy; @DateTime.Now.Year 美天优递 版权所有. Powered by Xiao Wang &copy;2016&#8211;@DateTime.Today.Year.
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>

