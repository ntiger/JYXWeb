@{
    ViewBag.Title = "商品分享区";
}
<h1 class="text-center">
    商品分享区
    <md-button class="md-fab md-warn"
               ng-click="showUpload($event)"
               aria-label="Back to Top">
        <md-tooltip md-direction="top">上传</md-tooltip>
        <md-icon class="material-icons">add</md-icon>
    </md-button>
</h1>
<md-content>
    <div layout="row" layout-padding layout-wrap layout-fill>
        <div flex-sm="50" flex-gt-sm="33" flex-gt-md="25" data-ng-repeat="g in goods track by $index">
            <md-card>
                <md-card-header>
                </md-card-header>
                <img ng-src="data:image/png;base64,{{g.GoodsImages[0].Image}}" class="md-card-image" alt="Washed Out">
                <md-card-title>
                    <md-card-title-text>
                        <span class="md-headline">{{g.Brand}}</span>
                    </md-card-title-text>
                </md-card-title>
                <md-card-content>
                    <p>{{g.Name}}</p>
                </md-card-content>
            </md-card>
        </div>
    </div>
    <div layout="row" layout-align="end">
        <md-button class="md-fab md-warn"
                   ng-click="showUpload($event)"
                   aria-label="Back to Top">
            <md-tooltip md-direction="top">上传</md-tooltip>
            <md-icon class="material-icons">add</md-icon>
        </md-button>
    </div>
</md-content>

<script type="text/ng-template" id="upload-dialog.html">
    <md-dialog aria-label="options dialog">
        <md-dialog-content layout-padding>
            <md-select ng-model="goods.Category" placeholder="种类" >
                <md-option ng-repeat="c in categories" ng-value="c">{{c}}</md-option>
            </md-select>
            <md-autocomplete md-search-text-change="searchTextChange(ctrl.searchText)"
                             md-search-text="ctrl.searchText"
                             md-selected-item-change="ctrl.selectedItemChange(item)"
                             md-items="item in ctrl.querySearch(ctrl.searchText)"
                             md-item-text="item.display"
                             md-min-length="0"
                             placeholder="What is your favorite US state?">
                <md-item-template>
                    <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.display}}</span>
                </md-item-template>
                <md-not-found>
                    No states matching "{{ctrl.searchText}}" were found.
                    <a ng-click="ctrl.newState(ctrl.searchText)">Create a new one!</a>
                </md-not-found>
            </md-autocomplete>

        </md-dialog-content>
        <md-dialog-actions>
            <span flex></span>
            <md-button ng-click="upload()">上传</md-button>
            <md-button ng-click="close()">取消</md-button>
        </md-dialog-actions>
    </md-dialog>
</script>
@section Scripts {
    <script src="~/src/app/controllers/goodsCtrl.js?0.1.0"></script>
}

